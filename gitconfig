[core]                                                       # vim: ft=gitconfig
  excludesfile = ~/.gitignore

[diff]
  guitool = meld
  tool = vimdiff

[difftool "vimdiff"]
  cmd = vim -fdc 'cnoremap q qa|wincmd l|cd "$GIT_PREFIX"' "$LOCAL" "$REMOTE"

[include]
  path = ~/.gitidentity

[merge]
  tool = meld

[mergetool]
  keepBackup = false

[pull]
  rebase = true
